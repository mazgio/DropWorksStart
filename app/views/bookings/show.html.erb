<div class="booking-container-show">
  <img class="hero-image-mobile" src="<%= @booking.venue.image_urls.first %>" alt="Venue-picture">
  <div class="title-show ">
    <h1>Your Reservation </h1>
    <% if @booking%>
      <%= "Booked succesfully"%>
    <% else%>
      <%= "Not booked"%>
    <% end%>
  </div>

  <div class="second-text-show">
    <h2 style="margin-bottom: 1em;">Reservation Information</h2>
    <h3><%= @booking.venue.name %></h3>
    <h6><%= @booking.venue.address %></h6>
    <h3><%="#{current_user.first_name} #{current_user.last_name}" %></h3>
    <h6><%= @booking.booking_date %></h6>
    <p>*Reservation valid for the entire day</p>
    <br>
    <%= link_to new_booking_review_path(@booking), class: "btn btn-primary" do %>
      <i class="bi-chat-square-text"></i> Write a review
    <% end %>
  </div>
</div>
